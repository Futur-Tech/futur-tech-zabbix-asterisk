<?xml version="1.0" encoding="UTF-8"?>
<zabbix_export>
    <version>5.0</version>
    <date>2020-10-19T00:25:05Z</date>
    <groups>
        <group>
            <name>Templates</name>
        </group>
    </groups>
    <templates>
        <template>
            <template>Template Web SSL Certificates</template>
            <name>Template Web SSL Certificates</name>
            <description>Check web site SSL certificate expire date and time left with LLD discovery</description>
            <groups>
                <group>
                    <name>Templates</name>
                </group>
            </groups>
            <applications>
                <application>
                    <name>SSL Certificate</name>
                </application>
            </applications>
            <discovery_rules>
                <discovery_rule>
                    <name>SSL domain discovery</name>
                    <key>discovery.sslDomains[discoveryDomains,{$SSL_CERT_FILEPATH_CSV}]</key>
                    <delay>1h</delay>
                    <lifetime>7d</lifetime>
                    <item_prototypes>
                        <item_prototype>
                            <name>{#DOMAIN} SSL certificate expiration date</name>
                            <key>check.sslCertificate[timeExpire,{#DOMAIN}]</key>
                            <delay>30m</delay>
                            <units>unixtime</units>
                            <description>Check expiry date of SSL certificate for domain {#DOMAIN}</description>
                            <applications>
                                <application>
                                    <name>SSL Certificate</name>
                                </application>
                            </applications>
                            <trigger_prototypes>
                                <trigger_prototype>
                                    <expression>{max(#2)}=0</expression>
                                    <name>Failed to retrieve SSL certificate for {#DOMAIN}</name>
                                    <priority>WARNING</priority>
                                </trigger_prototype>
                            </trigger_prototypes>
                        </item_prototype>
                        <item_prototype>
                            <name>{#DOMAIN} SSL certificate expiration time left</name>
                            <key>check.sslCertificate[timeLeft,{#DOMAIN}]</key>
                            <delay>30m</delay>
                            <units>s</units>
                            <description>Check expiry date of SSL certificate for domain {#DOMAIN}</description>
                            <applications>
                                <application>
                                    <name>SSL Certificate</name>
                                </application>
                            </applications>
                        </item_prototype>
                    </item_prototypes>
                    <trigger_prototypes>
                        <trigger_prototype>
                            <expression>{Template Web SSL Certificates:check.sslCertificate[timeExpire,{#DOMAIN}].max(#2)}&gt;0&#13;
and&#13;
{Template Web SSL Certificates:check.sslCertificate[timeLeft,{#DOMAIN}].last()}&lt;0d</expression>
                            <name>SSL certificate of {#DOMAIN} has EXPIRED on {ITEM.VALUE1}</name>
                            <priority>DISASTER</priority>
                            <dependencies>
                                <dependency>
                                    <name>Failed to retrieve SSL certificate for {#DOMAIN}</name>
                                    <expression>{Template Web SSL Certificates:check.sslCertificate[timeExpire,{#DOMAIN}].max(#2)}=0</expression>
                                </dependency>
                            </dependencies>
                        </trigger_prototype>
                        <trigger_prototype>
                            <expression>{Template Web SSL Certificates:check.sslCertificate[timeExpire,{#DOMAIN}].max(#2)}&gt;0&#13;
and&#13;
{Template Web SSL Certificates:check.sslCertificate[timeLeft,{#DOMAIN}].last()}&lt;{$SSL_CERT_EXPIRE_TIME_CRITICAL}</expression>
                            <name>SSL certificate of {#DOMAIN} will expire on {ITEM.VALUE1}</name>
                            <opdata>Expire on: {ITEM.VALUE1} Time left: {ITEM.VALUE2}</opdata>
                            <priority>HIGH</priority>
                            <description>Configured Critical level: {$SSL_CERT_EXPIRE_TIME_CRITICAL}</description>
                            <dependencies>
                                <dependency>
                                    <name>SSL certificate of {#DOMAIN} has EXPIRED on {ITEM.VALUE1}</name>
                                    <expression>{Template Web SSL Certificates:check.sslCertificate[timeExpire,{#DOMAIN}].max(#2)}&gt;0&#13;
and&#13;
{Template Web SSL Certificates:check.sslCertificate[timeLeft,{#DOMAIN}].last()}&lt;0d</expression>
                                </dependency>
                            </dependencies>
                        </trigger_prototype>
                        <trigger_prototype>
                            <expression>{Template Web SSL Certificates:check.sslCertificate[timeExpire,{#DOMAIN}].max(#2)}&gt;0&#13;
and&#13;
{Template Web SSL Certificates:check.sslCertificate[timeLeft,{#DOMAIN}].last()}&lt;{$SSL_CERT_EXPIRE_TIME_WARNING}</expression>
                            <name>SSL certificate of {#DOMAIN} will expire on {ITEM.VALUE1}</name>
                            <opdata>Expire on: {ITEM.VALUE1} Time left: {ITEM.VALUE2}</opdata>
                            <priority>WARNING</priority>
                            <description>Configured Warning level: {$SSL_CERT_EXPIRE_TIME_WARNING}</description>
                            <dependencies>
                                <dependency>
                                    <name>SSL certificate of {#DOMAIN} will expire on {ITEM.VALUE1}</name>
                                    <expression>{Template Web SSL Certificates:check.sslCertificate[timeExpire,{#DOMAIN}].max(#2)}&gt;0&#13;
and&#13;
{Template Web SSL Certificates:check.sslCertificate[timeLeft,{#DOMAIN}].last()}&lt;{$SSL_CERT_EXPIRE_TIME_CRITICAL}</expression>
                                </dependency>
                            </dependencies>
                        </trigger_prototype>
                    </trigger_prototypes>
                    <preprocessing>
                        <step>
                            <type>CSV_TO_JSON</type>
                            <params>;

1</params>
                        </step>
                    </preprocessing>
                </discovery_rule>
            </discovery_rules>
            <macros>
                <macro>
                    <macro>{$SSL_CERT_EXPIRE_TIME_CRITICAL}</macro>
                    <value>3d</value>
                    <description>Critical level expiration days left</description>
                </macro>
                <macro>
                    <macro>{$SSL_CERT_EXPIRE_TIME_WARNING}</macro>
                    <value>7d</value>
                    <description>Warning level expiration days left</description>
                </macro>
                <macro>
                    <macro>{$SSL_CERT_FILEPATH_CSV}</macro>
                    <value>/etc/zabbix/ssl-domains.csv</value>
                    <description>CSV file path of domains list</description>
                </macro>
            </macros>
        </template>
    </templates>
</zabbix_export>
